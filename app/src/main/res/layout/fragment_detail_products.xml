<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/margin_standard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.detailproduct.DetailProductFragment">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/radius_x_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_x_big"
        android:layout_marginTop="@dimen/margin_x_big"
         >

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars"
            >
        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_x_big"
        android:gravity="center"
        tools:text="Producto samsung galaxy s23"
        style="@style/Body"
        >

    </TextView>


    <TextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_x_big"
        android:gravity="center"
        tools:text="Producto precio 3000"
        style="@style/Body"
        >

    </TextView>

</LinearLayout>