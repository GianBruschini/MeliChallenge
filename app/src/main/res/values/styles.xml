<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchStyle">
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/search_design</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/margin_standard</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/margin_standard</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/text_standard</item>
    </style>


    <style name="Image">
        <item name="android:layout_width">@dimen/image_x_big</item>
        <item name="android:layout_height">@dimen/image_x_big</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/text_standard</item>
    </style>

</resources>